<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>
  <%= render 'form', bookmark: @bookmark %>
<table id= "table_bm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Type</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.name %></td>
        <td><%= bookmark.url %></td>
        <td><%= bookmark.type.name %></td>
        <td><%= bookmark.category.name %></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= pie_chart @grafico %>
</div>
<br>

<%= link_to 'New Bookmark', new_bookmark_path %>
